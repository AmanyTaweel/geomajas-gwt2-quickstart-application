<module rename-to="application">

	<inherits name='com.google.gwt.user.User'/>
	<inherits name="com.google.gwt.user.theme.standard.Standard" />

	<!-- Geomajas Client -->
	<inherits name="org.geomajas.gwt2.GeomajasClientImpl" />
	<inherits name="org.geomajas.gwt2.GeomajasClientServerExtension" />
    <inherits name='org.geomajas.gwt2.plugin.tilebasedlayer.GeomajasTileBasedLayerPlugin' />

	<entry-point class="org.mypackage.client.Application"/>

	<source path='client'/>

	<!-- Superdev -->
	<add-linker name="xsiframe" />
	<set-configuration-property name="devModeRedirectEnabled" value="true" />
	<set-property name="compiler.useSourceMaps" value="true"/>
</module>